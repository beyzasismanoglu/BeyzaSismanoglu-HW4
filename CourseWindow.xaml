<Window x:Class="CetStudents.CourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CetStudents"
        mc:Ignorable="d"
        Title="CourseWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <Label Content="" Name="lblCourseId"/>
        <TextBox Text="Code" TextWrapping="Wrap" Name="txtCourseCode" />
        <TextBox Text="Quota" TextWrapping="Wrap" Name="txtCourseQuota" />
        <TextBox Text="Credit" TextWrapping="Wrap" Name="txtCourseCredit" />

        
        <Button Content="Insert" Name="btnSave" Click="btnSave_Click"/>
        <Button Content="Update" Name="btnUpdate" Click="btnUpdate_Click"></Button>
        <Button Content="Delete" Name="btnDelete" Click="btnDelete_Click"></Button>
        <Button Name="btnOpenStudents" Content="Open Student Page" Click="btnOpenStudents_Click" />
        
        <DataGrid Name="dgCourses" Height="311" SelectedCellsChanged="dgCourses_SelectedCellsChanged"/>


    </StackPanel>
</Window>
